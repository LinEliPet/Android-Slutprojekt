<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lastUpdated"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="42dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />


    <Button
        android:id="@+id/button_parse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="85dp"
        android:layout_marginStart="50dp"
        android:text="Parse" />

    <Button
        android:id="@+id/button_search_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="85dp"
        android:layout_toEndOf="@+id/button_parse"
        android:text="Search currency" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/button_parse"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-59dp"
        android:layout_marginBottom="0dp">

<!--        <androidx.fragment.app.FragmentContainerView-->
<!--            android:id="@+id/fragmentContainerView"-->
<!--            android:name="com.linda.slutprojekt.FirstFragment"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content" />-->
    </FrameLayout>


</RelativeLayout>